		     <table>
				<% var i; for(i=0; i<quiz.length; i++) {%>
				<tr>
				   <td>
				    
		              <%= quiz[i].pregunta %>
				   </td>	
				   <td>
			           <input type="text" name="respuesta<%= i %>" id="respuesta<%= i %>"/>
				   </td>	
				   <td>
			           <input type="submit"  value="Enviar" onclick="rellenarvariables('<%= quiz[i].respuesta %>','<%= i %>');"/>
				   </td>
				   
				</tr> 
              <% } %>				
			 </table>
			 <input type="hidden"  name="correcto" id="correcto"/>
				  
			 
		  </form>
		  
