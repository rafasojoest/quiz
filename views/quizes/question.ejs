
<script>
   function rellenarvariables(valor,i){
      
      var introducido = document.getElementById("respuesta" + i).value;
	  
	  var res = "N";
	  
	  if (valor == introducido){
	   
	     res = "S";
	  }
	
	  document.getElementById("correcto" ).value=res;
   
   }

</script>
		 



		 <form method="get" action="/quizes/answer">
